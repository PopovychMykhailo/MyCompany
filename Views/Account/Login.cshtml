@model LoginViewModel

<!-- Поля для авторизації -->
<div>
    <h1>Вхід в особистий аккаунт</h1>

    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="UserName"></label>          <!-- Назву взяти з свойства UserName, моделі LoginViewModel -->
                <input asp-for="UserName" />                <!-- Введенні дані записати в свойство UserName             -->
                <span asp-validation-for="UserName"></span> <!-- Валідувати дані згідно свойства UserName               -->
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" />
                <span asp-validation-for="RememberMe"></span>
            </div>
            <div>
                <input type="submit" value="Увійти" />      <!-- Кнопка відправки форми -->
            </div>
        </form>
    </div>
</div>